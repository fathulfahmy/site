---
import BaseHead from "@/components/meta/BaseHead.astro";
import Header from "@/components/nav/Header.astro";
import Footer from "@/components/nav/Footer.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "@/consts";

type Props = {
  title?: string;
  description?: string;
};
const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title ?? SITE_TITLE} description={description ?? SITE_DESCRIPTION} />
  </head>

  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
